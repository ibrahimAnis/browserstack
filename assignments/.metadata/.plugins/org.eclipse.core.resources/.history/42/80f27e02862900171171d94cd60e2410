class Plateau
  def initialize(w, h)
    @w = w
    @h = h
    @rover = nil
  end
  
  def start(x, y, d)
    @rover = Rover.new(x, y, d)  
  end
  
  def move(step)
    #TODO: step logic here
    case step
    when "M"
      puts step
    when "L"
      puts step
    when "R"
      puts step
    end
  end
  
  def get_rover_position
    return @rover.x, @rover.y, @rover.d
  end
end

class Rover
  attr_accessor :x
  attr_accessor :y
  attr_accessor :d
  
  def initialize(x, y, d)
    @x = x
    @y = y
    @d = d
  end
end