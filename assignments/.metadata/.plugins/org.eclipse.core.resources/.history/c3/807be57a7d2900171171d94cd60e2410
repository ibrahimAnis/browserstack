require_relative "Plateau"

if ARGV.length == 0
  puts "Usage: ruby explore.rb \"filename.dat\""
  exit
end

fname = ARGV[0]
puts fname
file_obj = File.read(fname, "r") if fname != nil || fname != ""
size = file_obj.gets.chomp
size = size.split(" ")
w, h = size[0], size[1]
plateau = Plateau.new(w, h)
while (line = file_obj.gets)
  start = file_obj.gets.chomp
  start = start.split(" ")
  x, y, d = start[0], start[1], start[2]
  plateau.start(x, y, d)
  path = file_obj.gets.chomp
  path = path.chars.each { |x| x.upsize }
  puts path
end
