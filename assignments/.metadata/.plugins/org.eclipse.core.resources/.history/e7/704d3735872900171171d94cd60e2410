class Plateau
  def initialize(w, h)
    @w = w
    @h = h
    @rover = nil
  end
  
  def start(x, y, d)
    @rover = Rover.new(x, y, d)  
  end
  
  def move(step)
    #TODO: step logic here
    case step
    when "M"
      (new_x, new_y, new_d) = move_step(@rover.d)
      if valid_move(new_x, new_y, new_d)
        x, y, d = new_x, new_y, new_d
      end
    when "L"
      puts step
    when "R"
      puts step
    end
  end
  
  def get_rover_position
    return @rover.x, @rover.y, @rover.d
  end
  
  private
  def valid_move(x, y, d)
    return true
  end
  def move_step(x, y, d)
    case d
    when "N"
      return (x, y+1, d)
    when "E"
      return (x+1, y, d)
    when "S"
      return (x, y-1, d)
    when "W"
      return (x-1, y, d)
    end
  end
end

class Rover
  attr_accessor :x
  attr_accessor :y
  attr_accessor :d
  
  def initialize(x, y, d)
    @x = x
    @y = y
    @d = d
  end
end